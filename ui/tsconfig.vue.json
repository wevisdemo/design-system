// vue-tsc -p tsconfig.vue2.json --emitDeclarationOnly
// Blcoked by Mitosis issue https://github.com/BuilderIO/mitosis/issues/847
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "vue",
    "declaration": true,
    "types": ["vite/client"],
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [".mitosis/vue"]
}
